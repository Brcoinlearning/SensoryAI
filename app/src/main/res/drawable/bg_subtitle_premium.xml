<?xml version="1.0" encoding="utf-8"?>
<!-- 字幕气泡背景 - 优雅半透明 -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 主背景 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_base"/>
            <corners android:radius="@dimen/radius_md"/>
        </shape>
    </item>
    
    <!-- 顶部高光 -->
    <item android:bottom="20dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:startColor="#18ffffff"
                android:endColor="#00ffffff"
                android:type="linear"/>
            <corners android:radius="@dimen/radius_md"/>
        </shape>
    </item>
    
    <!-- 边框 -->
    <item>
        <shape android:shape="rectangle">
            <stroke
                android:width="@dimen/border_thin"
                android:color="@color/border_subtle"/>
            <corners android:radius="@dimen/radius_md"/>
        </shape>
    </item>
</layer-list>
