<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ar_card_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_premium"
    android:paddingLeft="@dimen/spacing_lg"
    android:paddingRight="@dimen/spacing_lg"
    android:paddingTop="@dimen/spacing_md"
    android:paddingBottom="@dimen/spacing_md"
    android:visibility="gone"
    android:elevation="@dimen/elevation_md">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 标题带图标 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <ImageView
                android:id="@+id/iv_card_icon"
                android:layout_width="@dimen/icon_md"
                android:layout_height="@dimen/icon_md"
                android:src="@drawable/ic_assistant"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:contentDescription="助手图标"/>
            
            <TextView
                android:id="@+id/tv_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="智能分析"
                android:textColor="@color/text_accent"
                android:textSize="@dimen/text_lg"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.02"/>
        </LinearLayout>

        <!-- 优雅分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/border_thin"
            android:layout_marginTop="@dimen/spacing_md"
            android:layout_marginBottom="@dimen/spacing_md"
            android:background="@color/divider_line"/>

        <!-- 内容区域 -->
        <TextView
            android:id="@+id/tv_card_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="准备就绪"
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_md"
            android:lineSpacingMultiplier="1.4"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.01"/>

    </LinearLayout>

</FrameLayout>